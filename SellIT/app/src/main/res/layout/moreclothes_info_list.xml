<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topnav"
        android:text="Additional Info"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="7dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:text="Clothes Color: "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/text1"
        android:background="#1c6a3c" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/text1"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothescolor_recycle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="5dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clothescolor_recycle"
        android:text="Clothes Size: "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clothescolor_recycle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/text2"
        android:text=" "
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/text2"
        android:background="#1c6a3c" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothessize_recycle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp" />

    <Button
        android:id="@+id/add_cart_btn_info"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/clothessize_recycle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add_to_cart_button"
        android:gravity="right"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buynow_btn_info"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:background="@drawable/buy_img"
        android:gravity="right"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/clothessize_recycle"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>