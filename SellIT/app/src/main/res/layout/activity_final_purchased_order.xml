<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalPurchasedOrder">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/topnav"
        android:gravity="center"
        android:padding="18sp"
        android:text="Check Out"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="FILLUP THIS FORM"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/fill"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_user"
            android:drawableLeft="@drawable/ic_baseline_account_box_24"
            android:hint="Name"
            android:padding="5dp" />

        <EditText
            android:id="@+id/customer_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/customer_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_user"
            android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
            android:hint="Address"
            android:padding="5dp" />

        <EditText
            android:id="@+id/customer_Number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/customer_address"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_user"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:hint="Number"
            android:padding="5dp" />

        <Button
            android:id="@+id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/user_button_color"
            android:text="Purchase"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />


    </RelativeLayout>

</RelativeLayout>