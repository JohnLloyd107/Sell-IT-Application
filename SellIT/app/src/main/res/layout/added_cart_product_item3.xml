<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3cae62"
        android:padding="10dp">

        <ImageView
            android:id="@+id/p_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_image"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/p_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/p_image"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/p_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p_name"
            android:layout_toRightOf="@+id/p_image"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Product Price"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p_price"
            android:text="Product Quantity"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/p_image"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p_quantity"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/p_image"
            android:text="Date added to cart "
            android:textColor="@color/white"
            android:textSize="15sp" />






    </RelativeLayout>



</androidx.cardview.widget.CardView>