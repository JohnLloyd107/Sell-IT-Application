<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".UserProfile">

    <TextView
        android:id="@+id/acc_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/acc_txt"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:src="@drawable/acc_icon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="10dp"
        android:background="#1c6a3c" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Name: "
        android:layout_below="@+id/profile_image"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/acc_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name "
        android:layout_marginTop="36dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/profile_image"
        android:layout_toRightOf="@+id/textView3"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Number: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/textView3"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/acc_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/textView4"
        android:layout_below="@+id/acc_username"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:text="Address: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acc_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_phonenumber"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="User Address "
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Birthdate: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acc_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="User Birthdate "
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:text="Email: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acc_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_Age"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="User Email "
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/acc_email"
        android:layout_marginTop="30dp"
        android:background="#1c6a3c" />

    <Button
        android:id="@+id/pending"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_email"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/user_button_color"
        android:text="PENDING"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_email"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/pending"
        android:background="@drawable/user_button_color"
        android:text="To RECIEVE"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_email"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/recieve"
        android:textColor="@color/white"
        android:background="@drawable/user_button_color"
        android:text="Complete"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_line"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/edit_ic"
        android:text="Edit"
        android:textSize="18dp"
        android:textStyle="bold" />










</RelativeLayout>