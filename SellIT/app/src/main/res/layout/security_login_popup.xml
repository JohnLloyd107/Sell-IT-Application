<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pin1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/pin2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/pin1"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/pin3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/pin2"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/pin4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/pin3"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/pin5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/pin4"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/pin6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/pin5"
        android:background="@drawable/pin_border"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Security Pin"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pinsubmitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pin5"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"
        android:background="@drawable/admin_button_color"
        android:text="Submit" />

</RelativeLayout>