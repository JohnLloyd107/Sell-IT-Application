<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/toptxt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Additional Info"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/topnav"/>

    <EditText
        android:id="@+id/clothes_color"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptxt"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="23dp"
        android:padding="10dp"
        android:background="@drawable/btn_purchase"
        android:layout_marginBottom="10dp"
        android:hint="Color" />

    <Button
        android:id="@+id/color_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptxt"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/clothes_color"
        android:background="@drawable/btn_purchase"
        android:text="Add" />

    <androidx.cardview.widget.CardView
        android:id="@+id/color_recycle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_below="@+id/clothes_color"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/clothes_size"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_recycle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:padding="10dp"
        android:background="@drawable/btn_purchase"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Size" />

    <Button
        android:id="@+id/size_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/color_recycle"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/clothes_color"
        android:background="@drawable/btn_purchase"
        android:text="Add" />

    <androidx.cardview.widget.CardView
        android:id="@+id/size_recycle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_below="@+id/clothes_size"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size_recycle"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/clothes_color"
        android:background="@drawable/btn_purchase"
        android:layout_marginBottom="20dp"
        android:text="Save" />


</RelativeLayout>